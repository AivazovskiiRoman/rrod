{
  "include": [
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "experimentalDecorators": true,
    "sourceMap": true,
    "skipDefaultLibCheck": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "allowSyntheticDefaultImports": true, // for classNames
    // "skipLibCheck": true, // temporary workaround for @types/lodash: 'All declarations of 'WeakMap' must have identical type parameters.'
    "lib": [
      "es2017", 
      "dom"
    ],
    "allowJs": false,
    "types": [
      "webpack-env"
    ],
    "paths": {
      "*": [
        "./ClientApp/types/*",
        "*"
      ]
    }
  },
  "exclude": [
    "bin",
    "obj",
    "node_modules"
  ]
}