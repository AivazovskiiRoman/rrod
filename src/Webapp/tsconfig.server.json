{
    "include": [],
    "compilerOptions": {
        "baseUrl": ".",
        "moduleResolution": "node",
        "target": "es2017",
        "jsx": "react",
        "experimentalDecorators": true,
        "sourceMap": true,
        "skipDefaultLibCheck": true,
        "lib": [ "es2017", "dom" ],
        "allowJs": false,
        "types": [ 
            "webpack-env",
            "EventSource"
        ],
        "typeRoots": [
            "ClientApp/types",
            "node_modules/@types",
            "node_modules"
        ],
        "paths": {
            "*": [ 
                "./ClientApp/types/*", 
                "*" 
            ]
        }
    },
    "exclude": [
      "bin",
      "obj",
      "node_modules"
    ]
  }