{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Attach (Legacy Protocol)",
            "port": 5858,
            "protocol": "legacy"
        },
        {
            "name": "Launch OrleansHost",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build OrleansHost",
            "program": "${workspaceRoot}\\src\\OrleansHost\\bin\\Debug\\netcoreapp2.0\\OrleansHost.dll",
            "args": [],
            "cwd": "${workspaceRoot}\\src\\OrleansHost",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "Launch Webapp",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "Build Webapp",
            "program": "${workspaceRoot}\\src\\Webapp\\bin\\Debug\\netcoreapp2.0\\Webapp.dll",
            "args": [],
            "cwd": "${workspaceRoot}\\src\\Webapp",
            "console": "internalConsole",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
}